<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appfortransport.busticketbooking">


    <EditText
        android:id="@+id/editTextNamebus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:hint="Enter name" />

    <EditText
        android:id="@+id/editTextphonebus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_below="@id/editTextNamebus"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:hint="Enter Phone Number" />

    <Spinner
        android:id="@+id/editTextbusnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextphonebus"
        android:layout_marginStart="31dp"
        android:entries="@array/busnumber"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:hint="Enter Bus Number" />


    <TextView
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextbusnumber"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="2dp"
        android:text="From" />

    <Spinner
        android:id="@+id/spinnerbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:entries="@array/stopping"></Spinner>

    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerbus"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:text="To" />

    <Spinner
        android:id="@+id/spinnerbus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/to"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:entries="@array/stopping"></Spinner>


    <TextView
        android:id="@+id/busseatbooked"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/spinnerbus1"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"></TextView>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/busseatbooked"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="9dp"
        android:text="SELECT DATE"
        android:textAlignment="center" />


    <Button
        android:id="@+id/buttonAddbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:text="Add" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddbus"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:text="BUSES"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="25dp"
        android:text="Tap on an Bus to add and view stopings"
        android:textAlignment="center" />


</RelativeLayout>